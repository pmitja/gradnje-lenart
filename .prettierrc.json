{
  "singleQuote": true,
  "arrowParens": "always",
  "semi": true,
  "bracketSameLine": false,
  "jsxSingleQuote": false,
  "arrayBracketSpacing": true,
  "printWidth": 100,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "objectCurlyNewline": "always"
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss"]
} 